<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#ffffff"
    tools:context="${relativePackage}.${activityClass}">
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/scanDateListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:baselineAligned="false"
        android:clickable="false"
        android:focusable="false"
        android:padding="10dp"
        android:focusableInTouchMode="false"
        android:gravity="fill_horizontal"
        android:longClickable="false"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/scanDateListText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:textColor="#42A5F5"
            android:inputType="none"
            android:linksClickable="true"
            android:text="Dates" />

        <Spinner
            android:id="@+id/ScanDateList"
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorAccent"
            android:popupBackground="#42A5F5"
            android:layout_height="wrap_content"     />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/timesVisitLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scanDateListLayout"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="10dp"
        android:gravity="fill_horizontal"
        android:longClickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/timesVisit"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:focusable="false"
            android:textColor="#42A5F5"
            android:inputType="none"
            android:linksClickable="true"
            android:text="Number of Rounds" />

        
         <Spinner
            android:id="@+id/timesVisitList"
            android:layout_width="match_parent"
            android:textColor="#42A5F5"
             android:backgroundTint="@color/colorAccent"
            android:popupBackground="#42A5F5"
            android:layout_height="wrap_content"  />
        
    </LinearLayout>
   
   <LinearLayout
        android:id="@+id/scanCodeListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timesVisitLayout"
        android:baselineAligned="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="fill_horizontal"
        android:longClickable="false"
        android:padding="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/scanCodeListText"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:textColor="#42A5F5"
            android:focusable="false"
            android:inputType="none"
            android:linksClickable="true"
            android:text="Locations" />

        <Spinner
            android:id="@+id/ScanCodeList"
            android:layout_width="match_parent"
            
            android:popupBackground="#42A5F5"

            android:layout_height="wrap_content"
             />

    </LinearLayout>
   
    
     
     
     
         <WebView
        android:id="@+id/webview"
        android:layout_below="@id/scanCodeListLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
     
</RelativeLayout>
</ScrollView>